<div>
  <p><%= link_to item.name, item %> (<%= item.date%>)
  <p><%= image_tag(item.photo_url, :width => 100) if item.photo.present? %> 
  <p>Średnia ocena: 
	<%=
		(Rate.where(:rateable_id =>  item.id.to_i).sum(:stars)/Rate.where(:rateable_id =>  item.id.to_i).count).round(2)

	%>    
	<% if user_signed_in? %>
		<% if current_user.role_id == 1 || 2 %>
  			<%= link_to 'Edytuj', edit_item_path(item) %> 
  			<%= link_to 'Usuń', item, method: :delete, data: { confirm: 'Jesteś pewien?' } %>
		<% end %> 
    <% end %>
</div>

