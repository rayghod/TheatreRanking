<%= form_for @item, :html => {:multipart => true} do |f| %>

  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-md-12">
<div class="col-md-3">
<div class="form-group">
  <div class="field">
    <%= f.label :nazwa %><br>
    <%= f.text_field :name, :class =>"form-control"%>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :rok %><br>
    <%= f.number_field :date, :class =>"form-control"%>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :opis %><br>
    <%= f.text_area :description, :class =>"form-control"%>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :zdjęcie %><br>
    <%= f.file_field :photo%>
  </div>
</div>

</div>
<div class="form-group">
  <div class="actions">
    <%= f.submit "Stwórz", :class =>"btn btn-primary" %>
  </div>
</div>
</div>
</div>
<% end %>
